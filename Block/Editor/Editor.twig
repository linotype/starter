<div data-field-id="{{field.uid}}" data-key="{{field.key}}" id="{{field.id}}" class="{{field.class}} form-group" data-type="Editor" data-controller="Editor">
    {% if title %}<label class="form-label">{{title}}</label>{% endif %}
    <div class="field editor-content card p-2">
        <div data-Editor-target="editor"></div>
        <textarea data-Editor-target="value" name="{{field.key}}" class="linotype-field-value" style="display:none">{{field.value}}</textarea>
    </div>
    {% if help %}<div class="form-help">{{help|raw}}</div>{% endif %}
</div>